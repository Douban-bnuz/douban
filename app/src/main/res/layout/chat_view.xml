<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/chat_top"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="71dp">
        <ImageButton
            android:id="@+id/chat_return"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/backpay"
            android:layout_width="17dp"
            android:layout_height="17dp" />
        <TextView
            android:id="@+id/chat_view_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="31dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/more"
                android:layout_width="19dp"
                android:layout_height="19dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/chat_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white1"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <ImageButton
            android:layout_marginLeft="10dp"
            android:background="@drawable/voice"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <EditText
            android:id="@+id/chat_edit"
            android:textSize="16sp"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edit_background" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/emotion"
                android:layout_marginLeft="7dp"
                android:background="@drawable/chatemotion"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <ImageButton
                android:layout_toRightOf="@+id/emotion"
                android:id="@+id/plus"
                android:layout_marginTop="0.5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/chatplus"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/send"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/emotion"
                android:text="发送"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:background="@drawable/chat_button_shape"
                android:layout_width="42dp"
                android:layout_height="32dp" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
